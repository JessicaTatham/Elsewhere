<div id="directions"><p>Insert directions for app use here!</p></div>

<div class="search">
<%=form_tag "/search", method: "get" do %>
  <%=label_tag :search, "Search for a Country:" %></br>
  <%=text_field_tag :search%>
  <%=submit_tag "Search"%>
<%end%>
</div>

<div class="map">
<script src="http://code.highcharts.com/highcharts.js"></script>
